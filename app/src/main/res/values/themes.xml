<resources>
    <!-- Base application theme. -->
    <style name="Theme.MediTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prusianblue</item>
        <item name="colorPrimaryVariant">@color/prusianblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="SplashWelcomeMessage">
        <item name="android:textColor">@color/splashText</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateTint">@color/progressBarColor</item>
    </style>

    <style name="AppBarMenuImage">
        <item name="tint">@color/appBarImage</item>
    </style>


    <style name="PasswordInfo">
        <item name="android:background">@color/passwordFormatBackground</item>
    </style>

    <style name="LoginHead">
        <item name="android:textColor">@color/loginHeadText</item>
    </style>

    <style name="LoginSubHead">
        <item name="android:textColor">@color/loginSubHeadText</item>
    </style>

    <style name="FormTextBox">
        <item name="android:textColor">@color/textBoxText</item>
        <item name="android:drawableTint">@color/helperText</item>
    </style>

    <style name="normalTextBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="helperTextTextColor">@color/helperText</item>
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="passwordToggleTint">@color/helperText</item>
    </style>

    <style name="TextBoxHeading">
        <item name="android:textColor">@color/textBoxHeading</item>
    </style>

    <style name="AdditionalDetailsDownArrow">
        <item name="tint">@color/prusianblue</item>
    </style>

    <style name="ProfileTextBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="StockItemMedicineName">
        <item name="android:textColor">@color/prusianblue</item>
    </style>

    <style name="GeneralUsedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="StockSpinnerItemTextView">
        <item name="android:textColor">@color/prusianblue</item>
    </style>

    <style name="HomeCardViewText">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>