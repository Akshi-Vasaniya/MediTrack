<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_170sdp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_menu"
    android:background="@drawable/button_outlined_white_background"
    android:layout_marginHorizontal="@dimen/_20sdp"
    android:visibility="invisible"
    android:elevation="@dimen/_17sdp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:layout_gravity="center"
        android:padding="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:src="@drawable/noun_profile_1192752"
        app:tint="@color/prusianblue"
        android:background="@drawable/circle_image"
        android:backgroundTint="@color/prusianblue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/username_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:text="Snej Hirpara"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/prusianblue"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintStart_toStartOf="parent" />
