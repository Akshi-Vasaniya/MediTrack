<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_170sdp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_menu"
    android:background="@color/white"
    android:layout_marginHorizontal="@dimen/_20sdp"
    android:elevation="@dimen/_17sdp"
    android:visibility="invisible"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menu_profile_image_layout"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/slide_menu_user_profile_image"
                    android:src="@drawable/noun_profile_1192752"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/username_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/name"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_profile_image_layout" />

            <View
                android:id="@+id/line_break1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AFAFAF"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/username_txt"/>

            <TextView
                android:id="@+id/account_details_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/account_details"
                android:textColor="#AFAFAF"
                app:drawableStartCompat="@drawable/round_account_box_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_break1" />

            <TextView
                android:id="@+id/setting_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/settings"
                android:textColor="#AFAFAF"
                app:drawableStartCompat="@drawable/round_settings_24"
                app:layout_constraintStart_toStartOf="@+id/account_details_item"
                app:layout_constraintTop_toBottomOf="@+id/account_details_item" />

            <TextView
                android:id="@+id/delete_account_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/delete_account"
                android:textColor="#AFAFAF"
                app:drawableStartCompat="@drawable/round_person_remove_24"
                app:layout_constraintStart_toStartOf="@+id/setting_item"
                app:layout_constraintTop_toBottomOf="@+id/setting_item" />

            <View
                android:id="@+id/line_break2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AFAFAF"
                android:layout_marginTop="@dimen/_25sdp"
                app:layout_constraintTop_toBottomOf="@id/delete_account_item"
                app:layout_constraintBottom_toTopOf="@id/btnLogout"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="@string/logout"
                app:cornerRadius="50dp"
                app:icon="@drawable/round_logout_24"
                app:iconGravity="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/button_background"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@id/line_break2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>