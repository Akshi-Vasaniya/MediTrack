<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_medi_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:helperTextEnabled="true"
        app:helperText="Required"
        android:layout_margin="12dp"
        style="@style/normalTextBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_medi_name_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/medicinename"
            android:drawablePadding="10dp"
            style="@style/FormTextBox"
            android:textSize="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:fontFamily="@font/comfortaa_regular"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/showSetReminderTime"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/notificationpicktime"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="@color/prusianblue"
            android:textColorHint="@color/prusianblue">
        </TextView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_medicine_timePicker_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Time"
            android:textSize="@dimen/_10sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/comfortaa_regular"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="@dimen/_10sdp"
            app:icon="@drawable/round_access_time_24"
            app:iconSize="@dimen/_15sdp"
            app:iconGravity="textStart"
            app:backgroundTint="@null"
            android:background="@drawable/button_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:paddingHorizontal="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp">
            <CheckBox
                android:id="@+id/checkMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:fontFamily="@font/comfortaa_regular" />
            <CheckBox
                android:id="@+id/checkTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:fontFamily="@font/comfortaa_regular"/>
            <CheckBox
                android:id="@+id/checkWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:fontFamily="@font/comfortaa_regular"/>
            <CheckBox
                android:id="@+id/checkSunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:fontFamily="@font/comfortaa_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:fontFamily="@font/comfortaa_regular" />
            <CheckBox
                android:id="@+id/checkFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:fontFamily="@font/comfortaa_regular" />
            <CheckBox
                android:id="@+id/checkSaturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:fontFamily="@font/comfortaa_regular" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>